<body>

<h1 style="text-align: center;">Carte des Ã©tablissements</h1>
<div id="map"></div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
        integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
        crossorigin="">
</script>

<script>
    // Initialisation de la carte
    var map = L.map('map').setView([46.5, 2.5], 6);

    // Fond OpenStreetMap
    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; OpenStreetMap contributors'
    }).addTo(map);

    // RÃ©cupÃ©ration des Ã©tablissements envoyÃ©s par Symfony
    var etablissements = {{ etablissements|json_encode|raw }};

    // Ajout des marqueurs
    etablissements.forEach(function(etab) {
        if (etab.latitude && etab.longitude) {
            L.marker([etab.latitude, etab.longitude])
                .addTo(map)
                .bindPopup(
                    `<b>${etab.nbRue} ${etab.rue}</b><br>
                     ${etab.cp} ${etab.ville}<br>
                     ðŸ“§ ${etab.mail}`
                );
        }
    });
</script>

