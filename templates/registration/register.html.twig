{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.role) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

            <div id="etudiant-fields" class="role-group" style="display:none;">
                {{ form_row(registrationForm.cv) }}
                {{ form_row(registrationForm.formation) }}
            </div>

            <div id="prof-fields" class="role-group" style="display:none;">
                {{ form_row(registrationForm.specialite) }}
            </div>

            <div id="entreprise-fields" class="role-group" style="display:none;">
                {{ form_row(registrationForm.cpEntreprise) }}
                {{ form_row(registrationForm.rueEntreprise) }}
                {{ form_row(registrationForm.villeEntreprise) }}
                {{ form_row(registrationForm.nb_rueEntreprise) }}
                {{ form_row(registrationForm.pays) }}
            </div>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">S'inscrire</button>
    {{ form_end(registrationForm) }}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const roleInputs = document.querySelectorAll('input[name$="[role]"]');
            const etudiantFields = document.getElementById('etudiant-fields');
            const profFields = document.getElementById('prof-fields');
            const entrepriseFields = document.getElementById('entreprise-fields');

            function updateFields(role) {
                etudiantFields.style.display = role === 'ROLE_USER' ? 'block' : 'none';
                profFields.style.display = role === 'ROLE_PROF' ? 'block' : 'none';
                entrepriseFields.style.display = role === 'ROLE_ENTREPRISE' ? 'block' : 'none';
            }

            roleInputs.forEach(input => {
                input.addEventListener('change', function () {
                    updateFields(this.value);
                });

                if (input.checked) {
                    updateFields(input.value);
                }
            });
        });
    </script>
{% endblock %}
