{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cv</th>
                <th>Specialite</th>
                <th>CpEntreprise</th>
                <th>RueEntreprise</th>
                <th>VilleEntreprise</th>
                <th>Pays</th>
                <th>Formation</th>
                <th>EstValide</th>
                <th>Date_creation</th>
                <th>Nb_rueEntreprise</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.cv }}</td>
                <td>{{ user.specialite }}</td>
                <td>{{ user.cpEntreprise }}</td>
                <td>{{ user.rueEntreprise }}</td>
                <td>{{ user.villeEntreprise }}</td>
                <td>{{ user.pays }}</td>
                <td>{{ user.formation }}</td>
                <td>{{ user.EstValide ? 'Yes' : 'No' }}</td>
                <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.nbRueEntreprise }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
